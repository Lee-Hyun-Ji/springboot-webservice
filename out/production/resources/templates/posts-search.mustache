{{>layout/header}}

<h1>스프링 부트로 시작하는 웹 서비스</h1>
<div class="col-md-12">
    <!-- 로그인 영역 -->
    <div class="row">
        <div class="col-md-6">
            <a href="/posts/save" role="button"
               class="btn btn-primary">글 등록</a>
            <br>
            {{#hasPrev}}
                <a href="/posts/search?keyword={{keyword}}&page={{previous}}" role="button" class="btn btn-dark">이전 페이지</a>
            {{/hasPrev}}
            {{^hasPrev}}
                <a href="/posts/search?keyword={{keyword}}&page={{previous}}" role="button" class="btn btn-dark disabled">이전 페이지</a>
            {{/hasPrev}}
            {{#hasNext}}
                <a href="/posts/search?keyword={{keyword}}&page={{next}}" role="button" class="btn btn-dark">다음 페이지</a>
            {{/hasNext}}
            {{^hasNext}}
                <a href="/posts/search?keyword={{keyword}}&page={{next}}" role="button" class="btn btn-dark disabled">다음 페이지</a>
            {{/hasNext}}
    <!-- 목록 출력 영역 -->
    <table class="table table-horizontal table-bordered">
        <thead class="thread-strong">
        <tr>
            <th>게시글 번호</th>
            <th>제목</th>
            <th>작성자</th>
            <th>최종 수정일</th>
        </tr>
        </thead>
        <tbody id="tbody">
        {{#searchList}}  <!-- posts = List<PostsListResponseDto> -->
        <tr>
            <td>{{id}}</td>
            <td><a href="/posts/update/{{id}}">{{title}}</a></td>
            <td>{{author}}</td>
            <td>{{modifiedDate}}</td>
        </tr>
        {{/searchList}}
        </tbody>
    </table>


</div>

{{>layout/footer}}