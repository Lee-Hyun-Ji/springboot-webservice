{{>layout/header}}

<div class="col-md-10" id="form-container">

    <!-- 목록 출력 영역 -->
    <p>"{{keyword}}" 검색 결과입니다.</p>
    <table class="table table-horizontal table-bordered">
        <thead class="thread-dark">
        <tr>
            <th class="col-md-1">번호</th>
            <th class="col-md-3">제목</th>
            <th class="col-md-1">작성자</th>
            <th class="col-md-2">최종 수정일</th>
            <th class="col-md-1">조회수</th>
        </tr>
        </thead>
        <tbody id="tbody">
        {{#searchList}}  <!-- searchList = Page<PostsListResponseDto> -->
        <tr>
            <td class="text-center">{{id}}</td>
            <td><a href="/posts/read/{{id}}">{{title}}</a></td>
            <td class="text-center">{{author}}</td>
            <td class="text-center">{{modifiedDate}}</td>
            <td class="text-center">{{view}}</td>
        </tr>
        {{/searchList}}
        </tbody>
    </table>

    <!-- 페이징 영역 -->
    <div class="row">
        <div class="col-md-12" id="page-btn">
            {{#hasPrev}}
                <a href="/posts/search?keyword={{keyword}}&page={{previous}}" role="button" class="btn btn-dark">이전 페이지</a>
            {{/hasPrev}}
            {{^hasPrev}}
                <a href="/posts/search?keyword={{keyword}}&page={{previous}}" role="button" class="btn btn-dark disabled">이전 페이지</a>
            {{/hasPrev}}
            {{#hasNext}}
                <a href="/posts/search?keyword={{keyword}}&page={{next}}" role="button" class="btn btn-dark">다음 페이지</a>
            {{/hasNext}}
            {{^hasNext}}
                <a href="/posts/search?keyword={{keyword}}&page={{next}}" role="button" class="btn btn-dark disabled">다음 페이지</a>
            {{/hasNext}}
        </div>
    </div>
</div>

{{>layout/footer}}