{{>layout/header}}
    <div class="col-md-12">

        <!-- 목록 출력 영역 -->
        <table class="table table-horizontal table-bordered">
            <thead class="thread-strong">
            <tr>
                <th>게시글 번호</th>
                <th>제목</th>
                <th>작성자</th>
                <th>최종 수정일</th>
            </tr>
            </thead>
            <tbody id="tbody">
                {{#posts}}  <!-- posts = List<PostsListResponseDto> -->
                    <tr>
                        <td>{{id}}</td>
                        <td><a href="/posts/update/{{id}}">{{title}}</a></td>
                        <td>{{author}}</td>
                        <td>{{modifiedDate}}</td>
                    </tr>
                {{/posts}}
            </tbody>
        </table>

        <!--    페이징 처리    -->
        <div class="row">
            <div class="col-md-12" id="page-btn">
                {{#hasPrev}}
                    <a href="?page={{previous}}" role="button" class="btn btn-dark">이전 페이지</a>
                {{/hasPrev}}
                {{^hasPrev}}
                    <a href="?page={{previous}}" role="button" class="btn btn-dark disabled">이전 페이지</a>
                {{/hasPrev}}
                {{#hasNext}}
                    <a href="?page={{next}}" role="button" class="btn btn-dark">다음 페이지</a>
                {{/hasNext}}
                {{^hasNext}}
                    <a href="?page={{next}}" role="button" class="btn btn-dark disabled">다음 페이지</a>
                {{/hasNext}}

            </div>
        </div>

    </div>

{{>layout/footer}}